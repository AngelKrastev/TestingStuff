package project_1;
import java.util.*;

public class excercise_4 {

	private static Scanner scanner;
	
	public static void main(String args[]) {
		
		scanner = new Scanner( System.in );
		System.out.println("Enter a string:");
		String s,s_reversed="";
		s = scanner.nextLine();
		int length = s.length();
		for(int i=length;i>=0;i--) s_reversed += s.charAt(i);
	}
}
